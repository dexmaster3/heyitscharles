@import "partials/normalize.styl";
@import "partials/var.styl";

/***
* Particles JS
***/
#particles-js {
  width: 100%;
  height: 100%;
  background-color: $bgGrey;
  background-image: url('');
  background-size: cover;
  background-position: 50% 50%;
  background-repeat no-repeat;
  z-index: -9999;
  position: absolute;
  top: 0;

  &.moon {
    background-color: #000;
  }
}

/***
* Animations
***/

@keyframes appear {
  0%   { opacity: 0; top: 15px; }
  12%  { opacity: 1; }
  13%  { top: 0;     }
  90%  { opacity: 1; }
  100% { opacity: 0; }
}

@keyframes line-right {
  0%   { width: 0; background-color: #ff9595; }
  10%  { width: 0; }
  100% { width: 100%; background-color: #ff6f6f; }
}

/***
* Global
***/

::selection {
  background: #fcf880;
}
::-moz-selection {
  background: #fcf880;
}

body {
  background-color: $bgGrey;
  color $darkGrey;
  font-family: $a-heavy;
}

h1 {
  font-family: $a-black;
  font-size: 32px;
  letter-spacing: 1px;
  span {
    color: $red;
  }
}

p {
  font-size: 24px;
  margin: 5px 0;
}

// night stuff
body.night {
  background-color: #000;
  color: #e3e3e3;
  transition: all 1s ease;

  #particles-js {
    background-color: #000;
    transition: all 1s ease;
  }
}

/**
* Intro
**/

.hero-block {
  height: 100vh;
  position: absolute;
  width: 100%;
}

.hero-content {
  position: relative;
  top: 50%;
  transform: translateY(-50%);
  max-width: 70%;
  margin: auto;

  p:last-of-type {
    margin-top: 3%;
  }

  .phrases {
    position: relative;
    animation: appear 5.5s infinite ease-in-out;

    &.anim:after {
      content: '';
      width: 100%;
      height: 8px;
      background-color: #ff6f6f;
      display: block;
      position: absolute;
      bottom: 5px;
      left: 0;
      animation: line-right 5.5s infinite;
      z-index: -2;
    }

  }

  .dont-move {
    font-size: 10px;
    color: rgba(0,0,0,.1);
  }
}
